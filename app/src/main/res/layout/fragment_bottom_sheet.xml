<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.BottomSheetFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlBook"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBookBottomSheet"
            android:layout_width="55dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/book"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBottomSheetTitle"
            android:layout_toEndOf="@id/ivBookBottomSheet"
            android:layout_alignTop="@id/ivBookBottomSheet"
            android:layout_marginStart="16dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Art Of Learning"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBottomSheetSubtitle"
            android:layout_below="@id/tvBottomSheetTitle"
            android:layout_toEndOf="@id/ivBookBottomSheet"
            android:layout_marginStart="16dp"
            android:text="Josh Waitzkin . EBook"
            android:layout_marginTop="4dp"
            android:textColor="#757575"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#757575"/>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlDownload"
            android:layout_marginVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                app:srcCompat="@drawable/ic_download"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDownload"
                android:layout_toEndOf="@id/ivDownload"
                android:layout_marginStart="24dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="Download"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlDelete"
            android:layout_marginVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                app:srcCompat="@drawable/ic_delete"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDelete"
                android:layout_toEndOf="@id/ivDelete"
                android:layout_marginStart="24dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="Delete from your library"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlAdd"
            android:layout_marginVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                app:srcCompat="@drawable/ic_add"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAdd"
                android:layout_toEndOf="@id/ivAdd"
                android:layout_marginStart="24dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="Add to shelves..."/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMark"
            android:layout_marginVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                app:srcCompat="@drawable/ic_mark"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMark"
                android:layout_toEndOf="@id/ivMark"
                android:layout_marginStart="24dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="Mark as read"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>